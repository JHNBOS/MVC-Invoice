@model InvoiceApplication.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container">

    <div class="row main">

        <div class="panel-heading">
            <div class="panel-title text-center">
                <h1 class="title">Create Product</h1>
                <hr style="width:60%;border-top:2px solid #fff;" />
            </div>
        </div>


        <div class="main-large main-center" style="max-width:50% !important;">

            <form id="form" class="form-horizontal" asp-controller="Product" asp-action="Create">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ProductID" />

                <!--NAME-->
                <div class="form-group">
                    <label asp-for="Name" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-industry fa-lg" aria-hidden="true"></i></span>
                            <input type="text" asp-for="Name" class="form-control" name="name" id="name" placeholder="Enter product name" />
                            <span asp-validation-for="Name" class="text-danger" />
                        </div>
                    </div>
                </div>

                <!--DESCRIPTION-->
                <div class="form-group">
                    <label asp-for="Description" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-industry fa-lg" aria-hidden="true"></i></span>
                            <input type="text" asp-for="Description" class="form-control" name="description" id="description" placeholder="Enter product description" />
                            <span asp-validation-for="Description" class="text-danger" />
                        </div>
                    </div>
                </div>

                <!--PRICE-->
                <div class="form-group">
                    <label asp-for="Price" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-eur fa-lg" style="padding-right:6px;padding-left:2px;" aria-hidden="true"></i></span>
                            <input class="form-control" type="text" name="price" id="price" placeholder="Enter price" />
                            <span asp-validation-for="Price" class="text-danger" />
                        </div>
                    </div>
                </div>

                <!--TAX PERCENTAGE-->
                <div class="form-group">
                    <label asp-for="TaxPercentage" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-percent fa-lg" aria-hidden="true"></i></span>
                            <select asp-for="TaxPercentage" class="form-control" name="description" id="description">
                                <option value="0">0</option>
                                <option value="6">6</option>
                                <option value="21">21</option>
                            </select>
                            <span asp-validation-for="TaxPercentage" class="text-danger" />
                        </div>
                    </div>
                </div>


                <!--EDIT BUTTON-->
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input id="edit_prod_btn" type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>

                <br />
                <br />
                <a asp-action="Index">Back to Overview</a>


            </form>


        </div>

    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            var t = "@(ViewBag.Price)";
            console.log("t: " + t);
            $("#price").val(t);
        });

        $("#edit_prod_btn").on("click", function () {
            var price = $("#price").val();
            $("#form").attr("asp-route-price", price);
        })
    </script>
}
